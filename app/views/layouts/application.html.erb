<!DOCTYPE html>
<html>
  <head>
    <title>Rubygramm</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
  <li class="nav-item">
    <%= link_to "my posts", my_posts_path, method: :get, class: "nav-link text-nowrap" %>
  </li>
      <li class="nav-item">
    <%= link_to "create new post", new_post_path, method: :get, class: "nav-link text-nowrap" %>
  </li>
  <li class="nav-item">
    <%= link_to "Log out", sign_out_path, method: :delete, class: "nav-link text-nowrap" %>
  </li>
  

<% end %>
    <%= yield %>
  </body>
</html>
