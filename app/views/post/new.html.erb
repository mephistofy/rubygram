<html>
  <head>
    <title></title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> 
    <link rel="stylesheet" href="https://www.w3schools.com/lib/w3-colors-ios.css">
  </head>

  <body>
      <%= render "shared/error_messages", error: @error %>
    <div>

    <div class ="w3-display-middle w3-round-xxlarge w3-border w3-ios-red " style="height:316px;width:400px;">
      
<%= form_for :post, :url => {:controller => :post, :action => :create} do |f| %>
      
      <br>
      
      <div class="w3-row w3-center w3-margin-top">
        <div class="w3-col s1 m1 l1 w3-center ">
          <p>
          </p>
        </div>

        <div class="w3-col s10 m10 l10 w3-center">
          <div class="field w3-center">
                        New Post <br />

  <%= f.file_field :image %>


          </div>
            
          <br>
          


          <br>
          
          <div class="w3-row w3-center">
            <div class="w3-col s2 m2 l2 w3-center ">
              <p>
              </p>
            </div>
            
            <div class="w3-col s8 m8 l8 w3-center ">

              <div class="actions w3-center ">
                  <%= f.submit "create post", class: "w3-button w3-black w3-hover-green w3-round-large", style: "width:100%;" %>



              </div>

            </div>
            
            <div class="w3-col s2 m2 l2 w3-center ">
              <p>
              </p>
            </div>
          </div>



          <br>
          

        <div class="w3-col s1 m1 l1 w3-center">
        </div>
        <% end %>
      </div>
    </div>
  </body>
</html>



